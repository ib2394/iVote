<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <!-- Change to HTML if JSP has issues -->
    </welcome-file-list>
    <!-- Servlet Definitions (only the ones you HAVE) -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCandidateServlet</servlet-name>
        <servlet-class>controller.AddCandidateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CandidateListServlet</servlet-name>
        <servlet-class>controller.CandidateListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCandidateServlet</servlet-name>
        <servlet-class>controller.DeleteCandidateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCandidatesServlet</servlet-name>
        <servlet-class>controller.ViewCandidatesServlet</servlet-class>
    </servlet>
    <!-- Only include servlets you actually have! -->
    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>DeleteElectionServlet</servlet-name>
        <servlet-class>controller.DeleteElectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCandidateServlet</servlet-name>
        <url-pattern>/AddCandidateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CandidateListServlet</servlet-name>
        <url-pattern>/CandidateListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCandidateServlet</servlet-name>
        <url-pattern>/DeleteCandidateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCandidatesServlet</servlet-name>
        <url-pattern>/viewCandidates</url-pattern>
    </servlet-mapping>
    <!-- Session Configuration -->
    <servlet-mapping>
        <servlet-name>DeleteElectionServlet</servlet-name>
        <url-pattern>/DeleteElectionServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
